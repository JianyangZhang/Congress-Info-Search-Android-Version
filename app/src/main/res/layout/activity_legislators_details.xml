<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_legislators_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.congressinfo.DetailsActivities.LegislatorsDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@null"
                    android:id="@+id/legislatorDetails_star" />

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="17dp"
                    app:srcCompat="@drawable/f"
                    android:id="@+id/legislatorDetails_f" />

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/t"
                    android:id="@+id/legislatorDetails_t" />

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/w"
                    android:id="@+id/legislatorDetails_w" />

            </LinearLayout>

            <ImageView
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="168dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/legislatorDetails_photo" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="103dp"
                    android:id="@+id/legislatorDetails_partyImg" />

                <TextView
                    android:text="N.A"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:id="@+id/legislatorDetails_party" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Name: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="18dp"
                    android:paddingLeft="15dp"
                    android:textSize="21dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_weight="4" />

                <TextView
                    android:text="N.A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="18dp"
                    android:paddingRight="15dp"
                    android:textSize="21dp"
                    android:id="@+id/legislatorDetails_name"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Email: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:paddingLeft="15dp"
                    android:textSize="21dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_weight="4" />

                <TextView
                    android:text="N.A"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="18dp"
                    android:paddingRight="15dp"
                    android:textSize="21dp"
                    android:id="@+id/legislatorDetails_email" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Chamber: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:paddingLeft="15dp"
                    android:textSize="21dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_weight="4" />

                <TextView
                    android:text="N.A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="18dp"
                    android:paddingRight="15dp"
                    android:textSize="21dp"
                    android:id="@+id/legislatorDetails_chamber" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Contact: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:paddingLeft="15dp"
                    android:textSize="21dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_weight="4" />

                <TextView
                    android:text="N.A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="18dp"
                    android:paddingRight="15dp"
                    android:textSize="21dp"
                    android:id="@+id/legislatorDetails_contact" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Start Term: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:paddingLeft="15dp"
                    android:textSize="21dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_weight="4" />

                <TextView
                    android:text="N.A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="18dp"
                    android:paddingRight="15dp"
                    android:textSize="21dp"
                    android:id="@+id/legislatorDetails_start_term" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="End Term: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:paddingLeft="15dp"
                    android:textSize="21dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_weight="4" />

                <TextView
                    android:text="N.A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="18dp"
                    android:paddingRight="15dp"
                    android:textSize="21dp"
                    android:id="@+id/legislatorDetails_end_term" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <TextView
                    android:text="Term: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:paddingLeft="15dp"
                    android:textSize="21dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_weight="4" />

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <ProgressBar
                        android:id="@+id/legislatorDetails_bar"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/progress_bar_color"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true" />

                    <TextView
                        android:id="@+id/legislatorDetails_percent"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/legislatorDetails_bar"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="0%" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Office: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:paddingLeft="15dp"
                    android:textSize="21dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_weight="4" />

                <TextView
                    android:text="N.A"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="18dp"
                    android:paddingRight="15dp"
                    android:textSize="21dp"
                    android:id="@+id/legislatorDetails_office" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="State: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:paddingLeft="15dp"
                    android:textSize="21dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_weight="4" />

                <TextView
                    android:text="N.A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="18dp"
                    android:paddingRight="15dp"
                    android:textSize="21dp"
                    android:id="@+id/legislatorDetails_state" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Fax: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:paddingLeft="15dp"
                    android:textSize="21dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_weight="4" />

                <TextView
                    android:text="N.A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="18dp"
                    android:paddingRight="15dp"
                    android:textSize="21dp"
                    android:id="@+id/legislatorDetails_fax" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Birthday: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:paddingLeft="15dp"
                    android:textSize="21dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_weight="4" />

                <TextView
                    android:text="N.A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="18dp"
                    android:paddingRight="15dp"
                    android:textSize="21dp"
                    android:id="@+id/legislatorDetails_birthday" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
