<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_background">

    <ImageView
        android:id="@+id/imageView_legislators_1"
        android:layout_width="58dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_legislators_1"
        android:textStyle="bold"
        android:textSize="21dp"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/imageView_legislators_1"
        android:layout_toRightOf="@+id/imageView_legislators_1"
        android:layout_toEndOf="@+id/imageView_legislators_1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="25dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_legislators_2"
        android:textSize="14dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="12dp"
        android:layout_alignBottom="@+id/imageView_legislators_1"
        android:layout_alignLeft="@+id/textView_legislators_1"
        android:layout_alignStart="@+id/textView_legislators_1" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@null"
        app:srcCompat="@drawable/forward_20px"
        android:layout_marginRight="0dp"
        android:layout_marginEnd="33dp"
        android:layout_marginTop="18dp"
        android:layout_alignTop="@+id/textView_legislators_1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
